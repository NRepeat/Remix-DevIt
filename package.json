{
  "name": "stage-1-remix",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev": "remix dev ",
    "start": "remix-serve ./build/index.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "check-types": "tsc --pretty --noEmit --skipLibCheck",
    "check-format": "prettier --check .",
    "check-lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier --write  .",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "test-all": "npm run check-format && npm run check-lint && npm run check-types && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@reactuses/core": "^4.0.10",
    "@remix-run/css-bundle": "^2.3.0",
    "@remix-run/node": "^2",
    "@remix-run/react": "^2",
    "@remix-run/serve": "^2",
    "@remix-validated-form/with-zod": "^2.0.7",
    "bcrypt": "^5.1.1",
    "clsx": "^2.0.0",
    "hamburger-react": "^2.5.0",
    "isbot": "^3.6.13",
    "match-sorter": "^6.3.1",
    "react": "^18.2.0",
    "react-content-loader": "^6.2.1",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.6.0",
    "remix-auth-form": "^1.4.0",
    "remix-validated-form": "^5.1.5",
    "sort-by": "^1.2.0",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.22.4",
    "zod-form-data": "^2.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^2",
    "@remix-run/eslint-config": "^2",
    "@types/bcrypt": "^5.0.2",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "concurrently": "^8.2.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0",
    "sass": "^1.69.5",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
